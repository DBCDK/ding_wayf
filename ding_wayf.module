/**
 * Implements hook_block_view().
 *
 * @param string $delta
 * @return array
 */
function ding_wayf_block_view($delta) {
  $block = array('content' => '');
  if ($delta == 'login') {
    global $user;
// Only show login link for anon. users.
    if ($user->uid == 0) {
      $config = variable_get('ding_wayf', NULL);
      $wayf = isset($config['wayflogin']) ? $config['wayflogin'] : FALSE;
      $nemlogin = isset($config['nemlogin']) ? $config['nemlogin'] : FALSE;
      if ( $wayf or $nemlogin ) {
        $block['content'] .= '<div class="ding-wayf-logon-block"> <div class="ding-wayf-logoninfo">' . t('Log in to WAYF or NemId') . '</div>';
      }
      if ($wayf) {
        $logo_path = base_path() . drupal_get_path('theme', $GLOBALS['theme']);
        $logo_path .= '/img/wayf.png';
        $logo_alt_text_wayf = t('logo_alt_text_wayf', array(), array('context' => 'ding_wayf'));
        $block['content'] .=
            l('<img src="' . $logo_path . '" alt="' . $logo_alt_text_wayf . '"/>', 'wayf/login', array('html' => TRUE, 'attributes' => array('class' => 'link-ding-wayf-wayf-login'), 'query' => array('idp' => 'wayf', drupal_get_destination())));
      }
      if ($nemlogin) {
        $logo_path = base_path() . drupal_get_path('theme', $GLOBALS['theme']);
        $logo_path .= '/img/nemid_logo.png';
        $logo_alt_text_nemid = t('logo_alt_text_nemid', array(), array('context' => 'ding_wayf'));
        $block['content'] .= l('<img src="' . $logo_path . '" alt="' . $logo_alt_text_nemid . '"/>', 'wayf/login', array('html' => TRUE, 'attributes' => array('class' => 'link-ding-wayf-wayf-login'), 'query' => array('idp' => 'nemlogin', drupal_get_destination())));
      }
      if ($wayf or $nemlogin ) {
        $block['content'] .=  '</div>';
      }
    }
  }

  return $block;
}

